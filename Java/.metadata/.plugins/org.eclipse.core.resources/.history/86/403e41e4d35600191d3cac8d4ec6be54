package exercicio04;

import javax.swing.JOptionPane;

public class Principal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String produto = JOptionPane.showInputDialog("Informe o tipo do produto ");
		double preço = Integer.parseInt(JOptionPane.showInputDialog("Informe o preço do produto"));
		String pagamento = JOptionPane.showInputDialog("Informe a forma de pagamento ").toLowerCase();
		
		if((preço >= 500) && (pagamento.equals("à vista"))) {
				System.out.println("Desconto de 10%, total a pagar é R$" +preço*0.9);
		}else {
			System.out.println("Sem desconto, total a pagar é R$" +preço);
		}
	
		
		
		
	}

}
