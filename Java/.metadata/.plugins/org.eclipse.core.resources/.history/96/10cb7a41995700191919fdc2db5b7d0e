package exercicio14;

import javax.swing.JOptionPane;

public class Principal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		double preço = Double.parseDouble(JOptionPane.showInputDialog("Informe o preço do veiculo"));
		
		if(preço<=12000){ 
			JOptionPane.showMessageDialog(null, "O carro teve 5% do valor repassado para a distribuidora, sendo ele "+(preço*0.05)+" e é isento de imposto");
		}
		
		
		
		
		
		
	}

}
