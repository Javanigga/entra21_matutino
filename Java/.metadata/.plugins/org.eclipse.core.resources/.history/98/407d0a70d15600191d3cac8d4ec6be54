package exercicio04;

import javax.swing.JOptionPane;

public class Principal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String produto = JOptionPane.showInputDialog("Informe o tipo do produto ");
		double preço = Integer.parseInt(JOptionPane.showInputDialog("Informe o preço do produto"));
		String pagamento = JOptionPane.showInputDialog("Informe a forma de pagamento ");
		
		String mensagem = "O produto comprado foi " +produto;
				mensagem+= " no valor de R$"+preço;
				mensagem+= " e a forma de pagamento foi "+pagamento;
				
				if(pagamento == "à vista") {
					JOptionPane.showMessageDialog(null, "Seu pagamento foi a vista, você recebe 10% de desconto");
				}
				
		
		
		
		
		
	}

}
